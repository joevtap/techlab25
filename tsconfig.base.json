{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  }
}
